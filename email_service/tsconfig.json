{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "./dist",
    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src"]
}
